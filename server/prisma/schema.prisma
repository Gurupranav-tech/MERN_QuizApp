generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Types and Enums

type Choice {
  choice String
  type   Int
}

// Models

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  quizzes Quiz[]

  quizRecords QuizRecord[]
}

model Quiz {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String

  questions Question[]

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  quizRecords QuizRecord[]
}

model Question {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  statement      String
  choices        Choice[]
  correct_choice Choice

  quiz   Quiz   @relation(fields: [quizId], references: [id])
  quizId String @db.ObjectId
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model QuizRecord {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  quiz   Quiz   @relation(fields: [quizId], references: [id])
  quizId String @db.ObjectId
}
